services:
  lil.customers:
    build:
      context: C:\azure-microservices
      dockerfile: Lil.Customers/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: lilcustomers
    ports:
    - target: 80
  lil.products:
    build:
      context: C:\azure-microservices
      dockerfile: Lil.Products/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: lilproducts
    ports:
    - target: 80
  lil.sales:
    build:
      context: C:\azure-microservices
      dockerfile: Lil.Sales/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: lilsales
    ports:
    - target: 80
  lil.search:
    build:
      context: C:\azure-microservices
      dockerfile: Lil.Search/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: lilsearch
    ports:
    - target: 80
version: '3.4'